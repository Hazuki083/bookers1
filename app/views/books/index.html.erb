<p id="notice"></p>

<h1>Books</h1>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>

    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book), method: :delete %></td>

      </tr>

<% end %>
  </tbody>
</table>

<h2>New book</h2>

<% if book.errors.any? %>
    <div class = "2 errors prohibited this book from being saved:">
        <ul>
            <% model.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<% if @books.errors.any? %>
  <% @books.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model: @books, url:'/books', local:true do |f| %>

  <div class="field">
  <label>Title</label>
  <%= f.text_field :title %>
  </div>

  <div class="field">
  <label>body</label>
  <%= f.text_area :body %>
  </div>
  <div class="actions"><%= f.submit 'Create Book' %>
  </div>
<% end %>
