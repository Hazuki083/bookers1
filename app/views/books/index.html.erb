<p id="notice"></p>

<h1>Books</h1>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>

    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><a class="/show" href="/books/747">Show</a></td>
        <td><a class="edit_747" href="/books/747/edit">Edit</a></td>
        <td><a data-confirm="Are you sure?" class="destroy_747" rel="nofollow" data-method="delete" href="/books/747">Destroy</a></td>
      </tr>


<% end %>

  </tbody>
</table>


<h2>New book</h2>
<%= form_with model: @books, url:'/books', local:true do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
